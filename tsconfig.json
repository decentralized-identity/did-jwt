{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "lib": ["dom", "ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "types": ["jest"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["**/__tests__/*", "node_modules", "lib"]
}
