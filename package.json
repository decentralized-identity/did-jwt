{
  "name": "did-jwt",
  "version": "6.11.2",
  "description": "Library for Signing and Verifying JWTs that use DIDs as issuers and JWEs that use DIDs as recipients",
  "type": "module",
  "source": "src/index.ts",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "dist",
    "src",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "scripts": {
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --experimental-import-meta-resolve\" jest",
    "test:ci": "jest --coverage",
    "build:js": "cross-env NODE_OPTIONS=--experimental-vm-modules tsc",
    "build:browser": "webpack --config webpack.config.cjs",
    "build": "pnpm build:js && pnpm build:browser",
    "build:docs": "echo 'PLEASE UPDATE REFERENCE DOCS MANUALLY'",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --ignore-pattern \"src/**/*.test.[jt]s\" \"src/**/*.[jt]s\"",
    "prepublishOnly": "yarn test:ci && yarn format && yarn lint",
    "release": "semantic-release --debug",
    "test1": "ts-node --esm ./src/scripts/test1.ts"
  },
  "author": "Pelle Braendgaard",
  "contributors": [
    "Mircea Nistor <mircea.nistor@mesh.xyz>",
    "Oliver Terbu <oliver.terbu@mesh.xyz>",
    "Joel Thorstensson <oed@3box.io>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:decentralized-identity/did-jwt.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@ethersproject/address": "5.7.0",
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/git": "10.0.1",
    "@types/elliptic": "6.4.14",
    "@types/jest": "28.1.8",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "codecov": "3.8.3",
    "cross-env": "^7.0.3",
    "did-key-creator": "^0.3.2",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-jest": "26.9.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "28.1.3",
    "jsontokens": "3.1.1",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.5",
    "mockdate": "3.0.5",
    "prettier": "2.8.4",
    "regenerator-runtime": "0.13.11",
    "semantic-release": "19.0.5",
    "ts-node": "^10.9.1",
    "tweetnacl": "1.0.3",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {
    "@stablelib/ed25519": "^1.0.2",
    "@stablelib/random": "^1.0.1",
    "@stablelib/sha256": "^1.0.1",
    "@stablelib/x25519": "^1.0.2",
    "@stablelib/xchacha20poly1305": "^1.0.1",
    "bech32": "^2.0.0",
    "canonicalize": "^1.0.8",
    "did-resolver": "^4.0.0",
    "elliptic": "^6.5.4",
    "js-sha3": "^0.8.0",
    "multiformats": "^11.0.2",
    "uint8arrays": "^4.0.3"
  },
  "resolutions": {
    "multiformats": "^11.0.2"
  },
  "eslintIgnore": [
    "*.test.ts"
  ]
}
