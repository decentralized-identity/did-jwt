{
  "name": "did-jwt",
  "version": "5.5.0",
  "description": "Library for Signing and Verifying JWTs that use DIDs as issuers",
  "source": "src/index.ts",
  "main": "./lib/index.js",
  "exports": "./lib/index.modern.js",
  "module": "./lib/index.module.js",
  "unpkg": "./lib/index.umd.js",
  "types": "./lib/index.d.ts",
  "umd:main": "./lib/index.umd.js",
  "files": [
    "lib",
    "dist",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage && codecov",
    "build:js": "microbundle --compress=false",
    "build:browser": "webpack --config webpack.config.js",
    "build": "yarn build:js && yarn test && yarn build:browser",
    "build:docs": "echo 'PLEASE UPDATE REFERENCE DOCS MANUALLY'",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/ --ext .ts",
    "prepublishOnly": "yarn test && yarn lint",
    "prepare": "yarn build",
    "release": "semantic-release --debug"
  },
  "author": "Pelle Braendgaard",
  "contributors": [
    "Mircea Nistor <mircea.nistor@mesh.xyz>",
    "Oliver Terbu <oliver.terbu@mesh.xyz>",
    "Joel Thorstensson <oed@3box.io>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:decentralized-identity/did-jwt.git"
  },
  "license": "Apache-2.0",
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!src/**/index.ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@babel/preset-env": "7.14.4",
    "@babel/preset-typescript": "7.13.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/elliptic": "6.4.12",
    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "codecov": "3.8.2",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.3",
    "jsontokens": "3.0.0",
    "microbundle": "0.13.1",
    "mockdate": "3.0.5",
    "prettier": "2.3.0",
    "regenerator-runtime": "0.13.7",
    "semantic-release": "17.4.3",
    "tweetnacl": "1.0.3",
    "typescript": "4.3.2",
    "webpack": "5.38.1",
    "webpack-cli": "4.7.0"
  },
  "dependencies": {
    "@stablelib/ed25519": "^1.0.1",
    "@stablelib/random": "^1.0.0",
    "@stablelib/sha256": "^1.0.0",
    "@stablelib/x25519": "^1.0.0",
    "@stablelib/xchacha20poly1305": "^1.0.0",
    "canonicalize": "^1.0.5",
    "did-resolver": "^3.1.0",
    "elliptic": "^6.5.4",
    "js-sha3": "^0.8.0",
    "uint8arrays": "^2.1.3"
  },
  "eslintIgnore": [
    "*.test.ts"
  ]
}
